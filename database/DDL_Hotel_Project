-- Database: hotel_project_db

-- DROP DATABASE IF EXISTS hotel_project_db;

CREATE DATABASE hotel_project_db
    WITH 
    OWNER = postgres
    ENCODING = 'UTF8'
    LC_COLLATE = 'Portuguese_Brazil.1252'
    LC_CTYPE = 'Portuguese_Brazil.1252'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;
	
	CREATE TABLE tb_hospede(
	cpf VARCHAR(15) NOT NULL PRIMARY KEY,
    nome VARCHAR(50) NOT NULL,
	email VARCHAR(50) NOT NULL,
	telefone VARCHAR(50) NOT NULL,
	hospedagem_id BIGINT
	);
	
	CREATE SEQUENCE public.sq_pk_hospedagem START 1;

	CREATE TABLE public.tb_hospedagem(
	id BIGINT NOT NULL DEFAULT 
    nextval('public.sq_pk_hospedagem') PRIMARY KEY,
	numero_quarto INTEGER NOT NULL,
	data_check_in DATE NOT NULL,
	data_check_out DATE NOT NULL,
	valor DOUBLE PRECISION NOT NULL,
	status VARCHAR(15) NOT NULL,
	com_garagem BOOLEAN NOT NULL,
	hospede_cpf VARCHAR(15) NOT NULL,
	
	FOREIGN KEY (hospede_cpf) REFERENCES tb_hospede(cpf)
		ON DELETE CASCADE ON UPDATE CASCADE
	);
	
	 SELECT * FROM tb_hospedagem;
	
	 SELECT * FROM tb_hospede;
	